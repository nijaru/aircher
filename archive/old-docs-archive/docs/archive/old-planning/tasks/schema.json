{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["priorities", "project", "tasks"],
  "properties": {
    "priorities": {
      "type": "object",
      "required": ["next_sequence", "current_focus"],
      "properties": {
        "next_sequence": {
          "type": "array",
          "items": { "type": "string" }
        },
        "current_focus": { "type": "string" }
      }
    },
    "project": {
      "type": "object",
      "required": ["name", "description", "version"]
    },
    "tasks": {
      "type": "object",
      "patternProperties": {
        "^[A-Z][A-Z0-9-]*[0-9]+[A-Z]*$": {
          "type": "object",
          "required": ["title", "status", "priority", "description", "acceptance_criteria"],
          "properties": {
            "title": { "type": "string" },
            "status": {
              "enum": ["pending", "in_progress", "blocked", "completed"]
            },
            "priority": {
              "enum": ["critical", "high", "medium", "low"]
            },
            "description": { "type": "string" },
            "acceptance_criteria": {
              "type": "array",
              "items": { "type": "string" }
            },
            "files": {
              "type": "array",
              "items": { "type": "string" }
            },
            "dependencies": {
              "type": "array",
              "items": { "type": "string" }
            },
            "estimated_effort": {
              "enum": ["small", "medium", "large"]
            },
            "notes": { "type": "string" }
          }
        }
      }
    }
  }
}
